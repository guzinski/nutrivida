<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Nutrivida\LojaBundle\Entity\Produto" table="produto">
    <indexes>
      <index name="FK__categoria" columns="categoria"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nome" type="string" column="nome" length="150" nullable="false"/>
    <field name="descricao" type="text" column="descricao" nullable="true"/>
    <field name="valor" type="float" column="valor" precision="10" scale="0" nullable="false"/>
    <many-to-one field="categoria" target-entity="Categoria">
      <join-columns>
        <join-column name="categoria" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
