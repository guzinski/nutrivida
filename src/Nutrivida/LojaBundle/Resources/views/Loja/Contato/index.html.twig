{% extends "NutrividaLojaBundle:Loja:layout.html.twig" %}
{% block title %}Nutrivida Tramandaí RS{% endblock %}

{% block head %}
{% endblock %}


{% block content %}
        <ul class="breadcrumbs">
            <div class="container">
                <li class="home">
                    <a href="{{ path('_loja_index') }}" title="Go to Home Page"><img src="{{ asset('bundles/nutrividaloja/loja/images/home.png') }}" alt=""/></a>&nbsp;&nbsp;
                    <span>&gt;</span>&nbsp;
                </li>
                <li class="home">
                    NutriVida&nbsp; 
                    <span>&gt;</span>
                </li>
                <li class="home">
                    <span class="red"> &nbsp;Contato&nbsp;</span>
                </li>
            </div>
        </ul>
        <div class="contact">
            <div class="container">
                <div class="contact_top">
                    <div class="col-md-3 contact_left">
                        <div class="contact_grid contact_address">
                            <h3>Endereço</h3>
                            <p>Av. Emancipação, 1380 Sala 4</p>
                            <p>Tramandaí / RS</p>
                            <p>95.590-000</p>
                            <p>+55 51 3661.4734</p>
                            <p><a href="malito:lojanutrivida@live.com">lojanutrivida@live.com</a></p>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="contact-form">
                            <form method="post" action="#">
                                <input type="text" class="textbox" value="Nome" onfocus="this.value = '';" onblur="if (this.value == '') {
                                                      this.value = 'Nome';
                                                  }">
                                <input type="text" class="textbox" value="E-mail" onfocus="this.value = '';" onblur="if (this.value == '') {
                                                      this.value = 'E-mail';
                                                  }">
                                <textarea value="Mensagem" onfocus="this.value = '';" onblur="if (this.value == '') {
                                                      this.value = 'Mensagem';
                                                  }">Mensagem</textarea>
                                <input type="submit" value="enviar">
                            </form>
                        </div>
                    </div>
                    <div class="clearfix"> </div>
                </div>
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3455.5107187379094!2d-50.1419161!3d-29.993488400000004!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x951873279a852c61%3A0x365a022bba61eee!2zQXYuIEVtYW5jaXBhw6fDo28sIDEzODAsIFRyYW1hbmRhw60gLSBSUywgOTU1OTAtMDAw!5e0!3m2!1spt-BR!2sbr!4v1419872286996" width="100%" height="300" frameborder="0" style="border:0"></iframe>
                </div>
            </div>
        </div>
{% endblock %}