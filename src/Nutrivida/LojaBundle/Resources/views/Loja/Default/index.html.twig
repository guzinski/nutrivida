{% extends "NutrividaLojaBundle:Loja:layout.html.twig" %}
{% block title %}Nutrivida Tramandaí RS{% endblock %}
{% block head %}
    <script src="{{ asset('bundles/nutrividaloja/loja/js/responsiveslides.min.js') }}"></script>
    <script src="{{ asset('bundles/nutrividaloja/loja/js/easyResponsiveTabs.js') }}"></script>
    
    <script src="{{ asset('bundles/nutrividaloja/loja/js/easyResponsiveTabs.js') }}"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery("#slider").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
                pager: true,
            });
            jQuery('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion           
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
        
        function enviarNews()
        {
            var email = jQuery("#news").val();
            var re = /^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i;
            if (re.test(email)) {
                jQuery.post('{{ path('_loja_news') }}', {email: email}, function(msg) {
                    bootbox.alert(msg);
                });
            } else {
                bootbox.alert("E-mail Inválido");
            }
        }
    </script>

{% endblock %}


{% block content %}

<div class="slider">
    <div class="callbacks_container">
        <ul class="rslides" id="slider">
            {% for banner in banners %}
            <li><img src="{% path banner.media, 'banner' %}" class="img-responsive" alt=""/></li>
            {% endfor %}
        </ul>
    </div>
</div>
        
<div class="column_center">
  <div class="container">
	<div class="search">
	  <div class="stay">Assine nossa newsletter</div>
	  <div class="stay_right">
              <input type="text" id="news" value="E-mail" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Your email address';}">
                <input onclick="enviarNews()" type="submit" value="">
	  </div>
	  <div class="clearfix"> </div>
	</div>
	<ul class="social">
	  <li class="find">Encontre-nos</li>
	  <li><a href="#"> <i class="fb"> </i> </a></li>
	  <li><a href="#"> <i class="tw"> </i> </a></li>
	  <li><a href="#"> <i class="dribble"> </i></a></li>
	  <div class="clearfix"> </div>
	</ul>
	<div class="clearfix"> </div>
  </div>
</div>

        
        <div class="sap_tabs">	
            <div class="m_3"><span class="left_line"> </span><h3>Produtos em destaque</h3><span class="right_line"> </span></div>
            <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                <ul class="resp-tabs-list">
                    {% for categoria in categorias %}
                    <li class="resp-tab-item" aria-controls="tab_item-{{ loop.index }}" role="tab"><span>{{ categoria.getNome }}</span></li>
                    {% endfor %}
                    <div class="clear"></div>
                </ul>				  	 
                <div class="resp-tabs-container">
                    {% for categoria in categorias %}
                    <div class="tab-1 resp-tab-content" aria-labelledby="tab_item-{{ loop.index }}">
                        <ul class="tab_img">
                            {% for produto in categoria.getProdutos %}
                            <li {% if loop.last %} class="last" {% endif %}>
                                <div class="view view-first">
                                    <a href="{{ path('_loja_produto', {slugCategoria: produto.getCategoria.getSlug, slug: produto.getSlug}) }}">
                                        <img src="{% path produto.getImagens.get(0).media, 'produto' %}" class="img-responsive" alt=""/>
                                    </a>
                                    <div class="mask">
                                        <div class="info"> </div>
                                    </div>
                                    <div class="tab_desc">
                                        <h3><a href="{{ path('_loja_produto', {slugCategoria: produto.getCategoria.getSlug, slug: produto.getSlug}) }}">{{ produto.getNome }}</a></h3>
                                        <p>R$ {{ produto.getValor|number_format(2, ',', '.') }}</p>
                                        <a href="javascript:adicionarCarrinho({{ produto.getId }})" class="btn1 btn-primary1"><span>Adicionar</span><img src="{{ asset('bundles/nutrividaloja/loja/images/plus.png') }}" alt="adicionar ao carrinho"/></a>
                                    </div>
                                </div>
                                {% if produto.desconto %} <div class="sale-box"> </div> {% endif %}
                            </li>
                            {% endfor %}
                            <div class="clearfix"></div>
                        </ul>
                    </div>
                    {% endfor %}
                </div>	
            </div>
        </div>
        {% if descontos|length>0 %}
        <div class="clearence">
            <div class="container">
                <div class="m_3"><span class="left_line1"> </span><i class="clearence"> </i><span class="right_line1"> </span></div>
            </div>
        </div>
        {% endif %}
        <div class="content_bottom">
            <div class="container">
                <ul class="grid1">
                    {% for desconto in descontos %}
                        <li {% if loop.last %} class="grid1_last" {% endif %}>
                        <div class="view view-first">
                            <a href="{{ path('_loja_produto', {slugCategoria: desconto.getCategoria.getSlug, slug: desconto.getSlug}) }}">
                                <img src="{% path desconto.getImagens.get(0).media, 'produto' %}" class="img-responsive" alt=""/>
                            </a>
                            <div class="tab_desc">
                                <h3><a href="single.html">{{ desconto.getNome }}</a></h3>
                                <p>R$ {{ desconto.getValor|number_format(2, ',', '.') }}</p>
                                <a href="javascript:adicionarCarrinho({{ desconto.getId }})" class="btn1 btn-primary1"><span>Adicionar</span><img src="{{ asset('bundles/nutrividaloja/loja/images/plus.png') }}" alt="adicionar ao carrinho"/></a>
                            </div>
                        </div>
                        <!--<div class="sale-box1"> </div>-->
                    </li>
                    {% endfor %}
                    <div class="clearfix"> </div>
                </ul>
            </div>
        </div>


{% endblock %}

