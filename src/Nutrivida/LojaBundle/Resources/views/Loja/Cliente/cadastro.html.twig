{% extends "NutrividaLojaBundle:Loja:layout.html.twig" %}
{% form_theme form 'NutrividaLojaBundle:Loja/Form:fields.html.twig' %}
{% block title %}Nutrivida Tramanda√≠ RS{% endblock %}

{% block head %}
{#    <script src="{{ asset('bundles/nutrividaloja/admin/js/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('bundles/nutrividaloja/admin/js/messages_ptbr.js') }}"></script>
    <script src="{{ asset('bundles/nutrividaloja/admin/js/jquery.maskedinput.min.js') }}"></script>
    <script src="{{ asset('bundles/nutrividaloja/admin/js/validate/additional-methods.js') }}"></script>
    <script type="text/javascript">
        jQuery(document).ready(function(){
            jQuery("#cliente_telefone").mask("(99) 9999-9999");
            jQuery("#form-cadastro").validate({
                submitHandler: function(form) {
                    form.submit();
               }
            });
        });
    </script>
