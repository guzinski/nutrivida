{% extends "NutrividaLojaBundle:Loja:layout.html.twig" %}
{% form_theme form 'NutrividaLojaBundle:Loja/Form:fields.html.twig' %}
{% block title %}Nutrivida Tramandaí RS{% endblock %}

{% block head %}
    <script src="{{ asset('bundles/nutrividaloja/admin/js/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('bundles/nutrividaloja/admin/js/messages_ptbr.js') }}"></script>
    <script src="{{ asset('bundles/nutrividaloja/admin/js/jquery.maskedinput.min.js') }}"></script>
    <script src="{{ asset('bundles/nutrividaloja/admin/js/validate/additional-methods.js') }}"></script>
    <script type="text/javascript">
        jQuery(document).ready(function(){
            jQuery("#cliente_telefone").mask("(99) 9999-9999");
            jQuery("#form-cadastro").validate({
                submitHandler: function(form) {
                    form.submit();
               }
            });
        });
    </script>

{% endblock %}


{% block content %}
        <ul class="breadcrumbs">
            <div class="container">
                <li class="home">
                    <a href="{{ path('_loja_index') }}" title="Go to Home Page"><img src="{{ asset('bundles/nutrividaloja/loja/images/home.png') }}" alt=""/></a>&nbsp;&nbsp;
                    <span>&gt;</span>&nbsp;
                </li>
                <li class="home">
                    NutriVida&nbsp; 
                    <span>&gt;</span>
                </li>
                <li class="home">
                    <span class="red"> &nbsp;Cliente&nbsp;</span>
                </li>
            </div>
        </ul>
        <div class="contact">
            <div class="container">
                <div class="register-but">
                    <form method="POST" id="form-cadastro" action=""> 
                        <div class="register-top-grid">
                            <h3>INFORMAÇÕES PESSOAIS</h3>
                            {{ form_row(form.nome) }}
                            {{ form_row(form.telefone) }}
                            {{ form_row(form.email) }}
                            <div class="clearfix"> </div>
                            <a class="news-letter" href="#">
                                <label class="checkbox"><input type="checkbox" name="news" checked=""><i> </i>Receber ofertas de produtos Nutrivida</label>
                            </a>
                        </div>
                        <div class="register-bottom-grid">
                            {{ form_row(form.senha.first) }}
                            {{ form_row(form.senha.second) }}
                            <div class="clearfix"> </div>
                            <input type="submit" value="salvar">
                        </div>
                        <div class="clearfix"> </div>
                        {{ form_row(form._token) }}
                        {{ form_errors(form) }}


                    </form>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>

{% endblock %}