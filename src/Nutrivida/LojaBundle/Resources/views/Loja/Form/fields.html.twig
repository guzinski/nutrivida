
{% block form_row %}
    <div>
        <span>{{ form_label(form) }}
            {% if required %}
                <label>*</label>
            {% endif %}
        </span>
        {{ form_widget(form) }}
        {{ form_errors(form) }}
    </div>

{% endblock form_row %}


{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
            <label class="error">{{ error.message }}</label>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}



